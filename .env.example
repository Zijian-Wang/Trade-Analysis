# Firebase Configuration
# Copy this file to .env and fill in your Firebase project values
# Get these from Firebase Console > Project Settings > Your apps > Web app

VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id  # Optional, for Analytics

# Firebase Admin SDK (for serverless functions)
# Get these from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Schwab API Configuration
# Get these from https://developer.schwab.com after registering your app
# Note: VITE_ prefix exposes the variable to the frontend (client ID only - safe to expose)
VITE_SCHWAB_CLIENT_ID=your_schwab_client_id
SCHWAB_CLIENT_ID=your_schwab_client_id
SCHWAB_CLIENT_SECRET=your_schwab_client_secret
SCHWAB_REDIRECT_URI=https://trade-risk-analysis.vercel.app/auth/schwab/callback
